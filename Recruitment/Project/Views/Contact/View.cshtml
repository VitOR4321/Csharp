@model Project.Models.UpdateContactViewModel
@{
}

<h1>Details</h1>
<form method="post" action="View" class="mt-5">
  <div class="form-group m-3">
    <label for="id">ID</label>
    <input type="text" class="form-control" asp-for="id" readonly>
  </div>
  <div class="form-group m-3">
    <label for="firstName">First Name</label>
    <input type="text" class="form-control" asp-for="firstName">
  </div>
  <div class="form-group m-3">
    <label for="lastName">Last Name</label>
    <input type="text" class="form-control" asp-for="lastName">
  </div>
  <div class="form-group m-3">
    <label for="email">Email address</label>
    <input type="email" class="form-control" asp-for="email">
  </div>
  <div class="form-group m-3">
    <label for="password">Password</label>
    <input type="password" class="form-control" asp-for="password">
  </div>
  <div class="form-group m-3">
    <label for="category">Category</label>
    <select class="form-control" asp-for="category" required>
        <option>służbowy</option>
        <option>prywatny</option>
        <option>inne</option>
    </select>
  </div>
  <div class="form-group m-3">
    <label for="subcategory">Subcategory</label>
    <input type="text" class="form-control" asp-for="subcategory">
  </div>
  <div class="form-group m-3">
    <label for="phone">Phone</label>
    <input type="number" class="form-control" asp-for="phone">
  </div>
  <div class="form-group m-3">
    <label for="birthdate">Birthdate</label>
    <input type="date" class="form-control" asp-for="birthdate">
  </div>
  <button type="submit" class="btn btn-primary" asp-action="Edit" asp-controller="Contact">Update</button>
  <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Contact">Delete</button>
</form>
  