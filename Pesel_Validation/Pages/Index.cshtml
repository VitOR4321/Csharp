@page
@model IndexModel
@{
    ViewData["Title"] = "Dane klienta";
}
<br />
<h2>Dzień dobry, prosze wprowadzić swoje dane.</h2>

@if(Model.errorMessage.Length>0)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong> @Model.errorMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

<form method="post">
    <div class='row mb-3'>
        <label class="col-sm-3 col-form-label">Podaj imię:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.clientInfo.name" />
        </div>
    </div>
    <div class='row mb-3'>
        <label class="col-sm-3 col-form-label">Podaj nazwisko:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="secoundName" value="@Model.clientInfo.secoundName" />
        </div>
    </div>
    <div class='row mb-3'>
        <label class="col-sm-3 col-form-label">Podaj pesel:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ID" value="@Model.clientInfo.ID" />
        </div>
    </div>

    @if(Model.successMessage.Length>0)
            {
                <div class="row mb-3">
                    <div class="col-sm-9">
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>@Model.successMessage</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

                        </div>
                    </div>
                </div>
            }

            @if(Model.congratulation.Length>0)
            {
                <div class="row mb-3">
                    <div class="col-sm-9">
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>@Model.congratulation</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

                        </div>
                    </div>
                </div>
            }

    <div class='row mb-3'>
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>

